<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
  xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
  xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <cm:property-placeholder persistent-id="org.opennms.horizon.provision.ignite.service" update-strategy="reload">
  </cm:property-placeholder>

    <reference id="ignite" interface="org.apache.ignite.Ignite"/>
    <reference id="igniteRemoteAsyncManagerFactory" interface="org.opennms.horizon.shared.ignite.remoteasync.manager.IgniteRemoteAsyncManagerFactory"/>

    <bean id="igniteRemoteAsyncManager" factory-ref="igniteRemoteAsyncManagerFactory" factory-method="create">
        <argument ref="ignite"/>
    </bean>
    <bean id="detectorRequestRouteManager" class="org.opennms.netmgt.provision.rpc.ignite.impl.DetectorRequestRouteManager">
        <argument ref="ignite"/>
    </bean>

    <bean
        id="igniteLocationAwareDetectorClient"
        class="org.opennms.netmgt.provision.rpc.ignite.impl.IgniteLocationAwareDetectorClient">

        <property name="ignite" ref="ignite"/>
        <property name="igniteRemoteAsyncManager" ref="igniteRemoteAsyncManager"/>
        <property name="detectorRequestRouteManager" ref="detectorRequestRouteManager"/>
    </bean>

    <service ref="igniteLocationAwareDetectorClient" interface="org.opennms.netmgt.provision.LocationAwareDetectorClient">
        <service-properties>
            <entry key="type" value="ignite"/>
        </service-properties>
    </service>
</blueprint>
