[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4

[*.feature]
indent_size = 2

[*.proto]
indent_size = 2
tab_width = 2

[*.sass]
indent_size = 2

[*.scala]
indent_size = 2
tab_width = 2

[*.scss]
indent_size = 2

[{*.vue,*.ts,*.js}]
indent_size = 2
tab_width = 2

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.stylelintrc,bowerrc,jest.config}]
indent_size = 2

[{*.jsf,*.jsp,*.jspf,*.tag,*.tagf,*.xjsp}]
indent_size = 2
tab_width = 2

[{*.pb,*.textproto}]
indent_size = 2
tab_width = 2

[{*.yaml,*.yml}]
indent_size = 2

[horizon-ignite.xml]
indent_size = 2
