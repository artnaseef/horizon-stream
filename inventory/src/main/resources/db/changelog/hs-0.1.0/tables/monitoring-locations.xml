<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet author="tbigg" id="0.1.0-monitoring-locations">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="monitoringlocations"/>
            </not>
        </preConditions>

        <createTable tableName="monitoringlocations">
            <column name="id" type="varchar(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="monitoringlocations_pkey"/>
            </column>
            <column name="monitoringarea" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="geolocation" type="varchar(255)"/>
            <column name="latitude" type="DOUBLE PRECISION"/>
            <column name="longitude" type="DOUBLE PRECISION"/>
            <column name="priority" type="INTEGER"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
